{
  "name": "frontend",
  "version": "0.0.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "ng": "ng",
    "start": "pnpm run build:wasm:dev && ng serve",
    "start:watch": "concurrently \"pnpm:watch:wasm\" \"ng serve\"",
    "build": "pnpm run build:wasm && ng build",
    "build:dev": "pnpm run build:wasm:dev && ng build --configuration development",
    "build:wasm": "cd ../rust-wasm && wasm-pack build --target web --release && cd ../frontend",
    "build:wasm:dev": "cd ../rust-wasm && wasm-pack build --target web --dev && cd ../frontend",
    "build:docker": "cd ../ && ./build_docker.ps1 && cd frontend",
    "watch:wasm": "chokidar \"../rust-wasm/src/**/*.rs\" -c \"pnpm build:wasm:dev\"",
    "watch:angular": "ng build --watch --configuration development",
    "watch": "concurrently \"pnpm:watch:angular\" \"pnpm:watch:wasm\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.13",
    "@angular/compiler": "^20.3.13",
    "@angular/core": "^20.3.13",
    "@angular/forms": "^20.3.13",
    "@angular/platform-browser": "^20.3.13",
    "@angular/router": "^20.3.13",
    "advent-of-code-2025": "link:../rust-wasm/pkg",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.11",
    "@angular/cli": "^20.3.11",
    "@angular/compiler-cli": "^20.3.13",
    "@types/jasmine": "~5.1.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.3"
  }
}
